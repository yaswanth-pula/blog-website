<%- include('partials/header'); %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="newComposePostTitle">Title</label>
        <input type="text" class ="form-control" name="newComposePostTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="newComposePostText">Post</label>
        <textarea class = "form-control" name="newComposePostText" rows="8"></textarea>
    </div>
    <button class=" btn btn-primary" type="submit" name="button">Publish</button>    
</form>
<%- include('partials/footer'); %>